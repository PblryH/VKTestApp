<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rgun.vktestapp">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait">
            <intent-filter>
                <data android:scheme="vk3974615" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vk.sdk.VKOpenAuthActivity"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.vk.sdk.VKServiceActivity"
            android:label="ServiceActivity"
            android:theme="@style/VK.Transparent"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".photo.list.ActivityPhotoList"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|layoutDirection"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".photo.view.ActivityPhotoView"
            android:label="@string/app_name">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
